{
    // ファイル設定
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "files.encoding": "utf8",

    // C# / .NET
    "dotnet.defaultSolution": "ChromaMerge.sln",
    "omnisharp.enableRoslynAnalyzers": true,
    "omnisharp.enableEditorConfigSupport": true,

    // エディタ設定 (C#)
    "[csharp]": {
        "editor.defaultFormatter": "ms-dotnettools.csharp",
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },

    // AXAML (Avalonia XAML)
    "[axaml]": {
        "editor.defaultFormatter": "avaloniateam.vscode-avalonia",
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },

    // XML
    "[xml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },

    // JSON
    "[json]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },

    // 除外設定
    "files.exclude": {
        "**/bin": true,
        "**/obj": true,
        "**/.vs": true,
        "**/*.user": true
    },

    // 検索除外
    "search.exclude": {
        "**/bin": true,
        "**/obj": true
    },

    // ファイル監視除外 (パフォーマンス向上)
    "files.watcherExclude": {
        "**/bin/**": true,
        "**/obj/**": true
    }
}
