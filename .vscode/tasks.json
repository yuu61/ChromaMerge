{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/ChromaMerge.csproj",
        "-c",
        "Debug"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build-release",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/ChromaMerge.csproj",
        "-c",
        "Release"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/ChromaMerge.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/ChromaMerge.csproj"
      ],
      "problemMatcher": "$msCompile",
      "isBackground": true
    },
    {
      "label": "clean",
      "command": "dotnet",
      "type": "process",
      "args": [
        "clean",
        "${workspaceFolder}/ChromaMerge.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish-win-x64",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/ChromaMerge.csproj",
        "-c",
        "Release",
        "-r",
        "win-x64",
        "--self-contained",
        "-p:PublishSingleFile=true"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish-osx-arm64",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/ChromaMerge.csproj",
        "-c",
        "Release",
        "-r",
        "osx-arm64",
        "--self-contained",
        "-p:PublishSingleFile=true"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish-linux-x64",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/ChromaMerge.csproj",
        "-c",
        "Release",
        "-r",
        "linux-x64",
        "--self-contained",
        "-p:PublishSingleFile=true"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
